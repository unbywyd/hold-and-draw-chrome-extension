{
    "name": "Hold and Draw",
    "description": "Hold your favorite button and draw, two modes are available - brush and arrow",
    "version": "1.0",
    "author": "UnBywyd",
    "homepage_url": "https://israelicoder.com/",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/favicon-16x16.png",
            "32": "/images/favicon-32x32.png",
            "48": "/images/icon-48x48.png",
            "128": "/images/icon-128x128.png",
            "192": "/images/icon-192x192.png",
            "512": "/images/icon-512x512.png"
        }
    },
    "icons": {
        "16": "/images/favicon-16x16.png",
        "32": "/images/favicon-32x32.png",
        "48": "/images/icon-48x48.png",
        "128": "/images/icon-128x128.png",
        "192": "/images/icon-192x192.png",
        "512": "/images/icon-512x512.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*",  "http://*/*"
            ],
            "js": [
                "script.js", "content-script.js"
            ]
        }
    ]
}